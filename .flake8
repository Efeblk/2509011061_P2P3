[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Ignore specific errors:
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# F401: imported but unused (in __init__.py files)
# E402: module level import not at top (needed for some configs)
ignore = E203,E501,W503,F401,E402

per-file-ignores =
    __init__.py:F401,F403
    src/main.py:E402,F401
